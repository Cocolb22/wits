<%= simple_form_for @user, url: profile_path do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :nick_name %>
  <%= f.input :birthday, html5: true %>
  <%= f.input :photo, as: :file, label: "Ajoutez une photo" %>
  <%= f.input :address,
    input_html: { data: { geocoder_target: "address" }, class: 'd-none' },
            wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :gender, collection: User::GENDERS %>
  <%= f.input :favorite_area %>

  <%= f.submit %>
<% end %>
