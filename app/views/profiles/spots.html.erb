<%= render 'profiles/header', user: @user %>

<div class="container-header container-index container-profil">
  <div class="container-header-results">
    <h3><%= pluralize(@spots.size, "résultat", plural: "résultats") %></h3>
  </div>

  <% @spots.each do |spot| %>
    <%= link_to spot_path(spot) do %>
      <div class="card-spot">
        <div class="card-spot-carousel">
          <div class="card-image-tag pills pop">
            most popular
          </div>
          <% spot.photos.each do |photo| %>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            </div>
              <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= cl_image_tag photo.key, crop: :fill, width: 400 %>
                  </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          <% end %>
        </div>

        <div class="card-spot-infos">
          <div class="card-spot-infos-rating">
            <div class="card-spot-infos-rating-stars">
              <% spot.avg_rating.floor.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 - spot.avg_rating.floor).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
            <div class="pills">
              <%= spot.spot_type %>
            </div>
          </div>

          <div class="card-spot-infos-title">
            <h2><%= spot.full_name %></h2>
            <i class="fas fa-cloud"></i>
          </div>

          <div class="card-spot-infos-localisation">
            <i class="fas fa-map-marker-alt"></i>
            <div class="card-spot-infos-localisation-city text-x-small-bold">
              <%= spot.address %> <span class="text-x-small">· à 12km</span>
            </div>
          </div>

          <div class="show-activities-content">
            <% spot.activities.each do |activity| %>
              <%=  image_tag "icons/#{activity.icon}" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="bottom-bar">
    <%= link_to search_spots_path, class:"bottom-bar-item bottom-nav-link nav-left" do %>
      <i class="fas fa-search size-font-awesome"></i>
      <div class="text text-x-small-bold">Présentation</div>
    <% end %>

    <%= link_to profile_path, class:"bottom-bar-item bottom-nav-link " do %>
      <i class="fas fa-user size-font-awesome"></i>
      <div class="text text-x-small-bold">Profil</div>
    <% end %>

    <%= link_to edit_profile_path, class:"bottom-bar-item bottom-nav-link active nav-right" do %>
      <i class="fas fa-cog size-font-awesome"></i>
      <div class="text text-x-small-bold">Paramètres</div>
    <% end %>
</div>
