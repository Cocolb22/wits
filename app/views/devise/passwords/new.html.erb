<div class= "container m-auto">

  <h2 class="txt-primary d-flex justify-content-center p-3 mt-3">Mot de passe oubliÃ©?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs p-2 ">
      <%= f.input :email, label:"Adresse mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions btn-cta justify-content-center txt-primary connect mt-3">
      <%= f.button :submit, "Envoyer le lien pour changer mon mot de passe", class: 'input-connect' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
