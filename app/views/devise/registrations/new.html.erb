<div class= "container">
  <h2 class=" txt-primary d-flex justify-content-center p-3">Créer un compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs txt-primary">
      <%= f.input :email, label:"Adresse mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, label:"Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label:"Confirmez votre mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions txt-primary btn-cta d-flex justify-content-center">
      <%= f.button :submit, "Créer un compte" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
