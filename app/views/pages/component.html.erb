<div class="container bg-white">
  <h1>Components</h1>

  <h3 class="mt-3">pills</h3>
  <div class="d-flex">
    <div class="pills">
      demain
    </div>

    <div class="pills active">
      Aujourdhui
    </div>

    <div class="pills pop">
      most popular
    </div>
  </div>

  <h3 class="mt-3">card</h3>

  <div class="card-spot">
    <div class="card-spot-carousel">
      <div class="card-image-tag pills pop">
        most popular
      </div>
      <i class="far fa-heart"></i>
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://picsum.photos/id/1/200/300" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/id/2/200/300" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/id/3/200/300" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="card-spot-infos">

      <div class="card-spot-infos-rating">
        <div class="card-spot-infos-rating-stars">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
        </div>
        <div class="pills">
          plage
        </div>
      </div>

      <div class="card-spot-infos-title">
        <h2>Plage de tresmeur</h2>
        <i class="fas fa-cloud"></i>
      </div>

      <div class="card-spot-infos-localisation">
        <i class="fas fa-map-marker-alt"></i>
        <div class="card-spot-infos-localisation-city text-x-small-bold">
        trébeurden <span class="text-x-small">· à 12km</span>
        </div>
      </div>

      <div class="card-spot-infos-sports">
        <%= image_tag "small/Surf-small.svg" %>
        <%= image_tag "small/Windsurf-small.svg" %>
        <%= image_tag "small/CharVoile-small.svg" %>
        <%= image_tag "small/JetSki-small.svg" %>
      </div>

    </div>
  </div>

  <h3 class="mt-3">picto méteo</h3>

  <div class="weather-picto">
    <div class="weather-picto-left">
      <i class="fas fa-cloud"></i>
    </div>
    <div class="weather-picto-right">
      <div class="weather-picto-right-title text-x-small">
        météo
      </div>
      <h3>Nuageux</h3>
    </div>
  </div>

  <h3 class="mt-3">picto search</h3>
  <div class="picto-search">
    <div class="picto-rectangle">
      <svg width="86" height="87" class="blob" viewBox="0 0 86 87" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M17.0849 65.0181C31.1999 79.7268 52.4685 90.8148 66.8919 83.907C81.2404 76.9635 88.8907 51.9091 84.1547 33.3467C79.4548 14.7088 62.4796 2.52333 44.6516 0.395515C26.7488 -1.76806 8.02937 6.05067 2.16845 19.087C-3.80333 32.1629 3.04463 50.3452 17.0849 65.0181Z" fill="#D9E3E8"/>
      </svg>
      <%= image_tag "big/Surf.svg", class: "picto-rectangle-sport" %>
    </div>
    <div class="picto-description label-bold">
      surf
    </div>
  </div>

  <div class="picto-search active">
    <div class="picto-rectangle">
      <svg width="86" height="87" class="blob" viewBox="0 0 86 87" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M17.0849 65.0181C31.1999 79.7268 52.4685 90.8148 66.8919 83.907C81.2404 76.9635 88.8907 51.9091 84.1547 33.3467C79.4548 14.7088 62.4796 2.52333 44.6516 0.395515C26.7488 -1.76806 8.02937 6.05067 2.16845 19.087C-3.80333 32.1629 3.04463 50.3452 17.0849 65.0181Z" fill="#D9E3E8"/>
      </svg>

      <%= image_tag "big/Surf.svg", class: "picto-rectangle-sport" %>
    </div>
    <div class="picto-description label-bold">
      surf
    </div>
  </div>


</div>
